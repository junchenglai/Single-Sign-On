@using IdentityServer.ViewModels;

@model SignupViewModel

@{
    ViewData["Title"] = "注册";
}

<div class="login-page">
    <div class="page-header">
        <h1>注册</h1>
    </div>
    @Html.Partial("_ValidationSummary")
    <div class="row">
        @if (Model.EnableLocalSignup)
        {
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">本地注册</h3>
                    </div>
                    <div class="panel-body">
                        <form asp-route="Signup">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="Username">用户名</label>
                                    <input class="form-control" placeholder="用户名" asp-for="Username" autofocus>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">密码</label>
                                    <input type="password" class="form-control" placeholder="要求至少6个字符，至少一个标点，至少一个大写字符，至少一个小写字符。" asp-for="Password" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name">姓名</label>
                                    <input class="form-control" placeholder="姓名" asp-for="Name" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <label asp-for="PhoneNumber">手机号码</label>
                                    <input type="tel" class="form-control" placeholder="13位手机号码" asp-for="PhoneNumber" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">电子邮箱</label>
                                    <input type="email" class="form-control" placeholder="电子邮箱" asp-for="Email" autocomplete="off">
                                </div>
                                @if (Model.AllowRememberLogin)
                                {
                                    <div class="form-group login-remember">
                                        <label asp-for="RememberLogin">
                                            <input asp-for="RememberLogin">
                                            <strong>记住我</strong>
                                        </label>
                                    </div>
                                }
                                <div class="form-group">
                                    <button class="btn btn-primary" name="button" value="signup">注册</button>
                                    <button class="btn btn-default" name="button" value="cancel">取消</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        }
        @if (!Model.EnableLocalSignup)
        {
            <div class="alert alert-warning">
                <strong>无效的注册请求</strong>
                该客户端不允许本地注册。
            </div>
        }
    </div>
</div>